#include <stdio.h>

int main() {
    float fahrenheit, celsius;

    // Ask user for input
    printf("Enter temperature in Fahrenheit: ");
    scanf("%f", &fahrenheit);

    // Conversion formula
    celsius = (fahrenheit - 32) * 5.0 / 9.0;

    // Display result
    printf("%.2f°F is equal to %.2f°C\n", fahrenheit, celsius);

    return 0;
}
